{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          {"path": "ecs-model/build/libs/*.jar", "name": "ecs-model-${nextRelease.version}.jar", "label": "ECS Model JAR"},
          {"path": "ecs-core/build/libs/*.jar", "name": "ecs-core-${nextRelease.version}.jar", "label": "ECS Core JAR"},
          {"path": "ecs-reactive/build/libs/*.jar", "name": "ecs-reactive-${nextRelease.version}.jar", "label": "ECS Reactive JAR"},
          {"path": "ecs-imperative/build/libs/*.jar", "name": "ecs-imperative-${nextRelease.version}.jar", "label": "ECS Imperative JAR"}
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["build.gradle", "main.gradle"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
